<template name="booksList">
  <div class="col-sm-10 col-sm-offset-1">
    <table class="table table-condensed table-hover">
      <colgroup>
        <col class="book-title" />
        <col class="author" />
        <col class="votes" />
      </colgroup>
      <thead>
        <tr>
          <th scope="col">Book</th>
          <th scope="col">Author</th>
          <th scope="col" class="number-column">Votes</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        {{#each books}}
          {{> book}}
        {{/each}}
      </tbody>
    </table>
  </div>
</template>
